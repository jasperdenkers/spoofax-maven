<?xml version="1.0" encoding="UTF-8"?>
<component-set>
  <components>
    <component>
      <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
      <role-hint>spoofax-language</role-hint>
      <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
      <configuration>
        <lifecycles>
          <lifecycle>
            <id>default</id>
            <phases>
              <initialize>
                org.metaborg:spoofax-maven-plugin:${project.version}:initialize
              </initialize>
              <generate-sources>
                org.metaborg:spoofax-maven-plugin:${project.version}:generate-sources
              </generate-sources>
              <compile>
                org.metaborg:spoofax-maven-plugin:${project.version}:compile,
                org.apache.maven.plugins:maven-compiler-plugin:compile,
              </compile>
              <package>
                org.metaborg:spoofax-maven-plugin:${project.version}:package
              </package>
              <verify>
                org.metaborg:spoofax-maven-plugin:${project.version}:verify
              </verify>
              <install>
                org.apache.maven.plugins:maven-install-plugin:install
              </install>
              <deploy>
                org.apache.maven.plugins:maven-deploy-plugin:deploy
              </deploy>
            </phases>
          </lifecycle>
          <lifecycle>
            <id>clean</id>
            <phases>
              <clean>
                org.metaborg:spoofax-maven-plugin:${project.version}:clean,
                org.apache.maven.plugins:maven-clean-plugin:clean
              </clean>
            </phases>
          </lifecycle>
        </lifecycles>
      </configuration>
    </component>
    <component>
      <role>org.codehaus.plexus.archiver.UnArchiver</role>
      <role-hint>spoofax-language</role-hint>
      <implementation>org.codehaus.plexus.archiver.zip.ZipUnArchiver</implementation>
      <instantiation-strategy>per-lookup</instantiation-strategy>
    </component>
    <component>
      <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
      <role-hint>spoofax-project</role-hint>
      <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
      <configuration>
        <lifecycles>
          <lifecycle>
            <id>default</id>
            <phases>
              <generate-sources>
                org.metaborg:spoofax-maven-plugin:${project.version}:project-generate-sources
              </generate-sources>
              <compile>
                org.apache.maven.plugins:maven-compiler-plugin:compile,
              </compile>
              <install>
              </install>
              <deploy>
              </deploy>
            </phases>
          </lifecycle>
          <lifecycle>
            <id>clean</id>
            <phases>
              <clean>
                org.metaborg:spoofax-maven-plugin:${project.version}:project-clean,
                org.apache.maven.plugins:maven-clean-plugin:clean
              </clean>
            </phases>
          </lifecycle>
        </lifecycles>
      </configuration>
    </component>
    <component>
      <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
      <role-hint>spoofax-test</role-hint>
      <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
      <configuration>
        <lifecycles>
          <lifecycle>
            <id>default</id>
            <phases>
              <test>
                org.metaborg:spoofax-maven-plugin:${project.version}:test
              </test>
              <install>
              </install>
              <deploy>
              </deploy>
            </phases>
          </lifecycle>
        </lifecycles>
      </configuration>
    </component>
  </components>
</component-set>